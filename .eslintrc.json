{
  "extends": [
    "eslint:recommended",
    "plugin:jsx-a11y/recommended",
    "plugin:import/recommended",
    "airbnb-base"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": "off",
    "consistent-return": "off",
    "no-underscore-dangle": "off",
    "import/prefer-default-export": "off"
  },
  "overrides": [
    {
      "files": [
        "*.json"
      ],
      "rules": {
        "indent": "off",
        "comma-dangle": [
          "error",
          "never"
        ],
        "quote-props": [
          "error",
          "always"
        ],
        "quotes": [
          "error",
          "double"
        ]
      },
      "parser": "jsonc-eslint-parser"
    }
  ]
}
